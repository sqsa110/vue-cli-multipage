radius-size = 5px
$fd_footer_background_active = #6ff76f
$fd_footer_background = #00ee00
$fd_footer_font_active = #ff7400

.login
  .login_main
    width 80%
    margin 30px auto 0
  .login_main_title
    display inline-block
    width 15%
    text-align justify
    text-justify distribute-all-lines
    text-align-last justify
  .login_userinfo_main
    margin-top 30px
  .login_title_main
    font-size 0px

  .login_title_name
    display inline-block
    background-color $fd_footer_background_active
    width 50%
    padding 10px 0
    text-align center
    font-size 16px
    color #fff
    text-decoration-line none
    &:first-of-type
      border-top-left-radius radius-size
      border-bottom-left-radius radius-size

    &:last-of-type
      border-top-right-radius radius-size
      border-bottom-right-radius radius-size

  .active
    background-color $fd_footer_background
    font-weight 500

